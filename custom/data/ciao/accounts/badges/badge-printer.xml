<rite>
    <plugins>
        <plugin id="common" name="rite_common"/>
        <plugin id="ciao" name="rite_ciao"/>
    </plugins>
    <processes>
        <process id="badges-printer">
            <importer plugin="ciao" name="badges">
                <configuration>
                    <config key="url" value="$CIAO_URL" />
                    <config key="api-key" value="$CIAO_API_KEY" />
                    <!-- Filter parameter -->
                    <!--
                    <config key="filter.userId" value="" />
                    -->
                </configuration>
            </importer>
            <exporters>
                <exporter plugin="common" name="console" />
            </exporters>
        </process>
    </processes>
</rite>