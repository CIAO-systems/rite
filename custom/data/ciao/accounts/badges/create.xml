<rite>
    <plugins>
        <plugin id="common" name="rite_common"/>
        <plugin id="ciao" name="rite_ciao"/>
        <plugin id="faker" name="rite_faker"/>
    </plugins>
    <processes>
        <process id="badges-creator">
            <importer plugin="faker">
                <configuration xml="$RITE_CONFIG_PATH/fake-badges.xml" />
            </importer>
            <exporters>
                <exporter plugin="common" name="console" />
                <exporter plugin="ciao" name="badges">
                    <configuration>
                        <config key="url" value="$CIAO_URL" />
                        <config key="api-key" value="$CIAO_API_KEY" />
                    </configuration>
                </exporter>
            </exporters>
        </process>
    </processes>
</rite>