{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "rust: cargo build",
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "Cargo tarpaulin",
			"type": "shell",
			"command": "cargo",
			"args": [
				"tarpaulin",
				"--out",
				"Lcov",
				"--out",
				"Html",
				"--output-dir",
				"${workspaceFolder}/coverage"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		}
	]
}