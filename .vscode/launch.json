    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Postgres-Example",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rite",
                    "--package=rite"
                ],
                "filter": {
                    "name": "rite",
                    "kind": "bin"
                }
            },
            "args": ["-f", "data/postgres.xml"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Star-Wars/Postgres example",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rite",
                    "--package=rite"
                ],
                "filter": {
                    "name": "rite",
                    "kind": "bin"
                }
            },
            "args": ["-f", "data/star-wars.xml"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "YouTrack example",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rite",
                    "--package=rite"
                ],
                "filter": {
                    "name": "rite",
                    "kind": "bin"
                }
            },
            "args": ["-f", "data/youtrack-example.xml"],
            "cwd": "${workspaceFolder}"
        },
   ]
}