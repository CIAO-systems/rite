<rite>
    <plugins>
        <plugin id="import_plugin" name="example_import"/>
        <plugin id="export_plugin" name="example_export"/>
    </plugins>
    <processes>
        <process id="text-uppercase-console">
            <importer plugin="import_plugin" name="text">
                <configuration/>
            </importer>
            <exporters>
                <exporter plugin="export_plugin" name="console">
                    <configuration>
                        <config key="prefix" value="First: " />
                    </configuration>
                </exporter>

                <exporter plugin="export_plugin" name="console" />
            </exporters>
        </process>
    </processes>
</rite>