<rite>
    <plugins>
        <plugin id="common" path="$RITE_CONFIG_PATH/../target/debug" name="rite_common"/>
        <plugin id="star-wars" path="$RITE_CONFIG_PATH/../target/debug" name="rite_rest"/>
    </plugins>
    <processes>
        <process id="read-from-star-wars-api-map-and-print">
            <importer plugin="star-wars">
                <configuration>
                    <config key="url" value="https://swapi.info/api/films" />
                </configuration>
            </importer>
            <transformers>
                <transformer plugin="common">
                    <configuration>
                        <config key="ignore_field" value="opening_crawl,director,producer" />
                    </configuration>
                </transformer>
                <transformer plugin="common" name="mapper">
                    <configuration xml="$RITE_CONFIG_PATH/star-wars-mapper-config.xml" />
                </transformer>
            </transformers>
            <exporters>
                <exporter plugin="common" name="console" />
            </exporters>
        </process>
    </processes>
</rite>