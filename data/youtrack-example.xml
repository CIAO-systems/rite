<rite>
    <plugins>
        <plugin id="common" path="target/debug" name="rite_common"/>
        <plugin id="youtrack" path="target/debug" name="rite_youtrack"/>
    </plugins>
    <processes>
        <process id="read-timetracking-from-issues">
            <importer plugin="youtrack">
                <configuration xml="$RITE_CONFIG_PATH/youtrack-$YOUTRACK_ISSUES_CONFIG.xml">
                    <config key="url" value="https://ciao-systems.youtrack.cloud" />
                    <config key="token" value="$YOUTRACK_TOKEN" />
                </configuration>
            </importer>
            <transformers>
                <transformer plugin="common">
                    <configuration>
                        <config key="format_field" value="created:isodatetime" />
                    </configuration>
                </transformer>
            </transformers>
            <exporters>
                <exporter plugin="common" name="console" />
            </exporters>
        </process>
    </processes>
</rite>